@model URLShortener.Models.ViewModels.UrlView

<form asp-action="AddNewUrl" asp-controller="Home" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-outline mb-4">
        <label class="form-label" asp-for="FullUrl">Url</label>
        <input type="text" class="form-control" type="text" asp-for="FullUrl" />
        <span asp-validation-for="FullUrl" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary btn-block mb-4" />
    </div>
</form>